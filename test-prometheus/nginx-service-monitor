apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  name: nginx-monitor
  namespace: nginx-deployment
  labels:
    release: my-prometheus
spec:
  selector:
    matchLabels:
      app: nginx
  namespaceSelector:
    matchNames:
      - nginx-deployment
  endpoints:
  - port: metrics
    interval: 15s